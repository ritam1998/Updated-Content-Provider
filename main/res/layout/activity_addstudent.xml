<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176sp"
        android:layout_marginLeft="176sp"
        android:layout_marginTop="66sp"
        android:layout_marginEnd="176sp"
        android:layout_marginRight="176sp"
        android:text="Registration"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/username"
        android:layout_width="313sp"
        android:layout_height="46sp"
        android:layout_marginStart="51sp"
        android:layout_marginLeft="51sp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="47sp"
        android:layout_marginRight="47sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="username"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/useremail"
        android:layout_width="317sp"
        android:layout_height="43sp"
        android:layout_marginStart="51sp"
        android:layout_marginLeft="51sp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="43sp"
        android:layout_marginRight="43sp"
        android:ems="10"
        android:hint="email"
        android:textStyle="bold"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <EditText
        android:id="@+id/userphone"
        android:layout_width="313sp"
        android:layout_height="43sp"
        android:layout_marginStart="50sp"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="48sp"
        android:layout_marginRight="48sp"
        android:ems="10"
        android:inputType="phone"
        android:hint="phone"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/useremail" />

    <EditText
        android:id="@+id/userpassword"
        android:layout_width="319sp"
        android:layout_height="47sp"
        android:layout_marginStart="53sp"
        android:layout_marginLeft="53sp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="39sp"
        android:layout_marginRight="39sp"
        android:layout_marginBottom="50sp"
        android:ems="10"
        android:hint="password"
        android:textStyle="bold"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/savebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userphone" />

    <Button
        android:id="@+id/savebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162sp"
        android:layout_marginLeft="162sp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="161sp"
        android:layout_marginRight="161sp"
        android:text="SAVE"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userpassword" />

</androidx.constraintlayout.widget.ConstraintLayout>